	    public static void ChoiceBajumelayu(){
	        System.out.println("1) baju melayu cekak musang");
	        System.out.println("2) baju melayu teluk belanga");

	    }

	    public static void ChoiceBajukurung(){
	        System.out.println("1) baju kurung normal");
	        System.out.println("2) baju kurung kurung lining");
	        System.out.println("3) baju kebaya normal");
	        System.out.println("4) baju kebaya lining");

	    }

	    public static void Choice(){

	        System.out.println("1) baju melayu");
	        System.out.println("2) baju kurung");
	        System.out.println("3) find each type baju kurung and baju melayu sold");
	        System.out.println("4) find maximum order for baju mealyu and baju kurung");
	        System.out.println("5) display customer(s) order detail");
	    }

	    public static void displayChoice(){

	        System.out.println("1) Order Number");
	        System.out.println("2) Name");
	        System.out.println("3) Phone Number");

	    }


	    public static void typechoice(){

		    System.out.println("1) Search Baju Melayu");
		    System.out.println("2) Search Baju Kurung");
	    }
